#experiment-body-template-wrapper {
	flex-direction: row;
	/* padding: 5px; */
}

.body-module {
	margin: 5px;
}

#experiment-body-left-part-table {
	background-color: var(--main-buttons-color);
}

#experiment-body-right-part-monitors-unity, #experiment-body-right-part-data-left-info,
#experiment-body-right-part-data-left-warnings, #experiment-body-right-part-data-right-graph {
	background-color: var(--main-modules-color);
}



/* LEFT RIGHT parts */
#experiment-body-left-part, #experiment-body-right-part {
	/* it devides screen to half */
	width: 50%;
	height: 100%;
	flex-direction: column;
}



/* LEFT  part */
#experiment-body-left-part-inputs, #experiment-body-right-part-statuses {
	height: 55px;
}

#experiment-body-left-part-table {
	flex-grow: 1;
}

#experiment-body-left-part-controls, #experiment-body-right-part-data-left-warnings {
	height: 150px;
}



/* RIGHT  part */
#experiment-body-right-part-statuses {}

#experiment-body-right-part-monitors {
	height: 55%;
}

#experiment-body-right-part-data {
	flex-grow: 1;
}

#experiment-body-right-part-data {
	flex-direction: row;
}

#experiment-body-right-part-monitors-unity {
	/* not 100% -- to leave space for eeg */
	flex-grow: 3;
}

#experiment-body-right-part-monitors-eeg {
	/* display: none; */
	flex-grow: 1;
}

#experiment-body-right-part-data-left, #experiment-body-right-part-data-right {
	/* it devides screen to half */
	width: 50%;
	height: 100%;
}

#experiment-body-right-part-data-left {
	flex-direction: column;
}

#experiment-body-right-part-data-left-info {
	flex-grow: 1;
}

#experiment-body-right-part-data-left-warnings {}

#experiment-body-right-part-data-right-graph {
	height: 100%;
}
